<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>BlackHole.Core.ORM</PackageId>
    <Authors>Michael Archolekas</Authors>
    <Company>Mikarsoft</Company>
	<PackageOutputPath>../nupkg</PackageOutputPath>
	  <Description>An Fully automated and easy to setup ORM with many extra features,
Like Mapping Entities directly to DTO, Lets you create Joins between Tables,
Stores Joins as Views for later use and more. It Creates and updates the Database based 
on the Entities properties. Registers automatically all services on the startup.
Supports SQL Server,MySql,Postgres, Oracle and SqLite, with Int and Guid Autoincrement. 
Just make your Entities.
Find documentation here =&gt; https://mikarsoft.com/BHDocumentation/index.html</Description>
    <Copyright>Copyright (c) 2023, Mikarsoft Ltd</Copyright>
    <PackageProjectUrl>https://mikarsoft.com</PackageProjectUrl>
    <PackageIcon>mikarsoft.png</PackageIcon>
    <RepositoryUrl>https://github.com/Mikarsoft/BlackHole-Core-ORM</RepositoryUrl>
    <PackageTags>dotnet6;dotnet7;ORM;MySql;Postgres;SqlServer;Oracle;Data;Provider;Autoincrement;Object;Relational;Mapping;Easy;Black;Hole;Mikarsoft</PackageTags>
    <NeutralLanguage>en</NeutralLanguage>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <RepositoryType>git</RepositoryType>
    <AssemblyVersion>6.1.0</AssemblyVersion>
    <FileVersion>6.1.0</FileVersion>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>
	<PropertyGroup>
		<Version>6.1.0</Version>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageReleaseNotes>- Maximum Optimization
- Added Unmanaged OpenEntity
- Complete user Control of OpenEntity's properties
- Support for Compound PKs in OpenEntities
- Ability to choose Default Values per Column</PackageReleaseNotes>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
	</PropertyGroup>
	<ItemGroup>
	  <None Remove="LICENSE.md" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\LICENSE.md">
			<Pack>true</Pack>
			<PackagePath>\</PackagePath>
			<Visible>True</Visible>
		</None>
	</ItemGroup>
  <ItemGroup>
    <None Include="..\mikarsoft.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
    <EmbeddedResource Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
    <EmbeddedResource Include="LICENSE.md">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.SqlClient" Version="5.1.1" />
    <PackageReference Include="Microsoft.Data.Sqlite.Core" Version="6.0.21" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
    <PackageReference Include="MySql.Data" Version="8.0.29" />
    <PackageReference Include="Npgsql" Version="6.0.9" />
    <PackageReference Include="Oracle.ManagedDataAccess.Core" Version="3.21.110" />
    <PackageReference Include="SQLitePCLRaw.bundle_e_sqlite3" Version="2.1.4" />
  </ItemGroup>

</Project>
